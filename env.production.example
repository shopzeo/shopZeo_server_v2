# Production Environment Configuration
NODE_ENV=production
PORT=5310

# Base URL Configuration
BASE_URL=https://linkiin.in
LIVE_API_URL=https://linkiin.in/api

# Cross-Origin Configuration
CORS_ORIGIN=https://linkiin.in
ALLOWED_ORIGINS=https://linkiin.in

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=shopzeo_db_production
DB_USER=shopzeo_prod
DB_PASSWORD=strong_password_here

# JWT Configuration
JWT_SECRET=your-production-jwt-secret-key-here
JWT_EXPIRES_IN=7d

# File Upload Configuration
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=5242880

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-production-email@gmail.com
SMTP_PASS=your-production-app-password

# SMS Configuration
SMS_API_KEY=your-production-sms-api-key
SMS_API_SECRET=your-production-sms-api-secret

# Payment Gateway Configuration
PAYMENT_GATEWAY_API_KEY=your-production-payment-api-key
PAYMENT_GATEWAY_SECRET=your-production-payment-secret

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Cloud Storage Configuration
CLOUD_STORAGE_BUCKET=your-production-bucket-name
CLOUD_STORAGE_REGION=your-production-region
CLOUD_STORAGE_ACCESS_KEY=your-production-access-key
CLOUD_STORAGE_SECRET_KEY=your-production-secret-key
