# Server Configuration
NODE_ENV=development
BASE_URL=https://linkiin.in
PORT=5310

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=shopzeo_db
DB_USER=root
DB_PASSWORD=

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d

# File Upload Configuration
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=5242880

# Cross-Origin Configuration
CORS_ORIGIN=https://linkiin.in
ALLOWED_ORIGINS=https://linkiin.in

# Live API Configuration
LIVE_API_URL=https://linkiin.in/api

# Email Configuration (if using)
