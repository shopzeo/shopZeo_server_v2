# Local Development to Live Server Configuration
# Copy this file to .env and update values

# Server Configuration
PORT=5000
NODE_ENV=development

# Live Server Configuration
BASE_URL=https://linkiin.in
LIVE_API_URL=https://linkiin.in/api

# Database Configuration (Local Database)
DB_HOST=localhost
DB_PORT=3306
DB_NAME=shopzeo_db
DB_USER=root
DB_PASSWORD=

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d

# File Upload Configuration
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=5242880

# Cross-Origin Configuration
CORS_ORIGIN=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,https://linkiin.in

# Live Server Authentication (if needed)
LIVE_API_KEY=your-live-server-api-key
LIVE_AUTH_TOKEN=your-live-server-auth-token
